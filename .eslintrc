{
    "extends": "airbnb",
    "rules": {
        "react/jsx-filename-extension": [
              1,
              {
                  "extensions": [
                      ".js",
                      ".jsx",
                      ".json"
                  ]
              }
        ],
        "react/forbid-prop-types": 0,
        "no-underscore-dangle": 0,
        "class-methods-use-this": 0,
        "max-len": 0,
        "indent": ["warn", 4],
        "react/jsx-indent": ["warn", 4],
    },
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    }
}
